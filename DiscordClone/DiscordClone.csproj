    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Icons\call.png" />
    <None Remove="Icons\call.svg" />
    <None Remove="Icons\plus.png" />
    <None Remove="Icons\plus.svg" />
    <None Remove="Icons\video.png" />
    <None Remove="Icons\video.svg" />
